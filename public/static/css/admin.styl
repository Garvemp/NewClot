body
    background-color: #e4e5e9
    font-size: 14px
    font-family: "Roboto", sans-serif;

h2,h3,h4,h5,ul,body,html
    padding: 0px
    margin: 0px

.mtop16
    margin-top: 16px

.wrapper
    min-height: 100vh
    overflow: hidden
    .col1
        float: left
        position relative
        z-index 999
        width: 17%
    .col2
        float: left
        width 83%

.sidebar
    background-color:   #fff       
    min-height: 100vh
    .section-top
        background-color: #fff  
        box-shadow: 0 0.5rem 1rem rgba(0,0,0, 0.15)
    .logo
            
        img 
            display: block
            margin: 0px auto
            padding-top: 24px
            width: 20%
    .user
        color: #3A4D39 !important
        padding: 16px
        a
            color: #3A4D39
            font-size: 1.2em
    .main
        display: block
        margin-top: 8px
        ul
            li
                margin-bottom: 4px
                
                a
                    color: #739072 !important
                    display: block
                    font-size: 1em
                    padding: 12px 12px
                    text-decoration: none
                    i
                        margin-right: 10px
                        text-decoration: none
                    &:hover
                        background-color: #EEEDEB
                        box-shadow: 0 0.5rem 1rem rgba(0,0,0, 0.15)
                        text-decoration: none
.navbar
    background-color: #EEEDEB
    a
       color: #739072 !important       
    i
        margin-right: 8px                 
.page
    padding-top: 16px
    padding-bottom: 16px
    .breadcrumb
        background-color: #EEEDEB
        box-shadow: 0 0.5rem 1rem rgba(0,0,0, 0.10) !important
        .breadcrumb-item
            display: inline-block
            padding: 12px 16px
            text-decoration: none
            a
                color: #3A4D39
                text-decoration: none
                &:hover
                    text-decoration: none
                i
                    margin-right: 8px
    .panel
        background-color: #EEEDEB
        border-radius: 6px
        border-bottom: 2px  solid  #739072
        width: 100%
        .header
            border-bottom: 1px solid #adadad
            
            h2.title
                display: inline-block
                color: #1d3d19
                font-size: 1em
                padding: 12px 16px
            i
                margin-right: 8px
        .inside
            padding: 16px
            .nav
                
                .nav-link
                    
                    border: 1px solid #3A4D39
                    margin-right: 8px
                    &:hover
                        background-color: #3A4D39
                        color: #fff
                    i
                        margin-right: 8px

.opts
    a
        border-radius: 4px
        border 1px solid #dedede
        display: inline-block
        padding: 8px 12px
        color: #4F6F52
        
.content-cl    
    h2.title
                display: inline-block
                color: #1d3d19
                font-size: 1em
                padding: 12px 16px    
                border-bottom: 1px solid #adadad
    i
                margin-right: 8px
