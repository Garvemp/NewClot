body
    background-color: #EEEDEB
    margin 0px
    font-size: 14px

.mtop16
    margin-top 16px

.box
    background-color #fff
    border-radius 8px
    borde 1px solid #d6d6d6
    position absolute
    width 500px   
    .btn-success
        background-color #4F6F52
        border: 0px
        width 100%
    .form-control
        &:focus
        &:active
            outline: none
            box-shadow: none
    .inside
        padding: 16px

    .header
        padding: 16px
        border-radius 8px 8px 0px 8px
        a
            img 
                display: block
                margin: 0px auto
                width: 15%
    .footer
        text-align: center    
        a
            display inline-block     
            font-size: .8em  
            &:last-child
                margin-left: 34px


.box_login
    left calc(50% - 250px)
    top calc(50% - 220px)

.box_register
    left calc(50% - 250px)
    top calc(50% - 314px)